        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
<!--         <li>
          <%= link_to "English",
                      url_for(controller: controller.controller_name,
                              action: controller.action_name,
                              locale: 'en' )
          %>
        </li> -->
        <li>
          <%= link_to '简体字',
                      url_for(controller: controller.controller_name, action: controller.action_name, locale: 'zh-CN')
          %>
        </li>
        <li>
          <%= link_to '繁體字',
                      url_for(controller: controller.controller_name, action: controller.action_name, locale: 'zh-TW')
          %>
