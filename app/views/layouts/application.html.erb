    <div class="text-center">
      <br>
      <h1>
      <%= image_tag ("https://s3.amazonaws.com/rails-textbook/rails_for_sfc/images/logo/mugcup_logo_nav_gray.png") %>
      <span class="color-coffee">ページを改装中です。</span>
      <br>
      <small>しばらくお待ち下さい...</small></h1>
    </div>
  <% end %>
