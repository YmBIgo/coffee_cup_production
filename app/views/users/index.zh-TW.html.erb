<% provide :title, "歡迎光臨！#{current_user.full_name}" %>
<header class="text-center header-img-shop">
  <div class="header-content fadeIn wow">
  <%= render "common/alert" %>
    <div class="header-content-word">
      <% unless user_studiable? %>
        <h3 class="alert alert-warning">
          <strong>
          教材<a href="/<%= I18n.locale %>/pay_warning" target="_blank">從這裡</a>可以購買。
          </strong>
        </h3>
      <% end %>
      <h1 style="line-height:1.5">
        <%= image_tag("https://s3.amazonaws.com/rails-textbook/rails_for_sfc/images/logo/coffee_grains_logo.png") %>
        <br>
        <strong>
        <%= current_user.full_name %>
        <br>
        歡迎光臨！
        </strong>
      </h1>
    </div>
  </div>
</header>
<div class="container">
  <div class="textbook-area">
    <div class="textbook-area-inner fadeIn wow">
      <br>
      <div class="row text-center">
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 study-text-section">
          <h2><i class="fa fa-book color-red"></i> 學習</h2>
          <%= image_tag("https://s3.amazonaws.com/rails-textbook/rails_for_sfc/images/header/coffee_img_text.jpg",
                        :width => "90%",
                        :class => "textbook-title-img hover_img zoom_img") %>
          <% if user_studiable? %>
            <h4>
            到<strong><u><%= current_user.limit_time %></u></strong>
            <br>
            剩<strong><u><%= current_user.time_left %></u></strong>
            </h4>
            <a href="/<%= I18n.locale %>/pay_info#title2-2-2" class="btn btn-green">延長看教材的時間</a>
            <hr class="red-hr">
            <div class="row">
            <div class="col-lg-6">
              <a href="/<%= I18n.locale %>/mugcups" target="_blank" class="btn btn-primary">
                    <%= image_tag("https://s3.amazonaws.com/rails-textbook/rails_for_sfc/images/logo/mugcup_logo_link.png",
                                  :class => "nav-img") %>
                    Mugcup(基礎編)
              </a>
              <br><br>
            </div>
            <div class="col-lg-6">
              <a href="/<%= I18n.locale %>/coffee_cups" target="_blank" class="btn btn-danger">
                  <%= image_tag("https://s3.amazonaws.com/rails-textbook/rails_for_sfc/images/logo/coffee_logo_link.png",
                                :class => "nav-img") %>
                  Coffee（應用編）
              </a>
              <br><br>
            </div>
          </div>
          <% else %>
            <h4>還沒購買教材</h4>
            <a href="/<%= I18n.locale %>/pay_warning" class="btn btn-green">從這裡購買教材</a>
            <hr class="red-hr">
            <p>
            <a href="/zh-TW/mugcups" target="_blank" class="btn btn-primary">
                  <%= image_tag("https://s3.amazonaws.com/rails-textbook/rails_for_sfc/images/logo/mugcup_logo_link.png",
                                :class => "nav-img") %>
                  Mugcup(基礎編)
            </a>　
            <a href="/zh-TW/coffee_cups" target="_blank" class="btn btn-danger">
                  <%= image_tag("https://s3.amazonaws.com/rails-textbook/rails_for_sfc/images/logo/coffee_logo_link.png",
                                :class => "nav-img") %>
                  Coffee（應用編）
            </a>
            </p>
          <% end %>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 teach-text-section">
          <h2><i class="fa fa-question color-blue"></i> 問問題</h2>
          <%= image_tag("https://s3.amazonaws.com/rails-textbook/rails_for_sfc/images/header/coffee_img_teacher.jpg",
                        :width => "90%",
                        :class => "hover_img textbook-title-img zoom_img") %>
          <h4>
          註冊<a href="https://facebook.com" target="_blank">Facebook</a>之後、從<a href="https://www.facebook.com/CoffeeCupJapan/" target="_blank">Facebook網站</a>問不知道的地方。
          </h4>
        </div>
      </div>
      <br>
      <div id="title0" class="textbook-title">
        <h1><strong>帳號資料</strong></h1>
      </div>
      <br>
      <div class="my-info-card hover_img_reverse">
        <div class="my-info-card-inner">
          <h2 class="text-center">
            <strong><i class="fa fa-user"></i>　<%= current_user.full_name %></strong>
            <br>
            <p><a href="/<%= I18n.locale %>/users/<%= current_user.id %>/edit" class="btn btn-success" style="margin-top:15px">編輯帳號資料</a></p>
          </h2>
          <hr class="red-hr">
          <h4 class="text-left">
            <strong>Id</strong>　　　　　　 : <%= current_user.id %>
            <br>
            <strong>性別</strong>　　　　　 : <%= current_user.sex_name %>
            <br>
            <strong>郵箱</strong>　　　　　 : <%= current_user.email %>
            <br>
            <strong>電話號碼</strong>　　　 : <%= current_user.phone_number %>
            <br>
            <strong>公司，學校</strong>　　 : <%= current_user.company_name %>
            <br>
            <strong>縣市鄉鎮</strong>　　 : <%= current_user.prefecture %>
          </h4>
          <p><%= link_to "編輯登錄資料", edit_user_registration_path, :class => "btn btn-warning" %></p>
        </div>
      </div>
      <br>
    </div>
  </div>
</div>