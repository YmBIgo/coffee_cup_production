<% provide :title, "パスワードを忘れましたか？" %>
<header class="text-center header-img-desk">
<%= render "common/alert" %>
  <div id="top-page" class="log-area">
    <div class="log-area-inner fadeIn wow">
      <div class="text-left">
        <%= devise_error_messages! %>
      </div>
      <div>
        <h2><%= image_tag("https://s3.amazonaws.com/rails-textbook/rails_for_sfc/images/logo/mugcup_logo_nav_gray.png") %> <strong>パスワードを忘れましたか？</strong></h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

          <div class="field">
            <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "メールアドレス" %>
          </div>
          <br>
          <div class="actions">
            <%= f.submit "パスワードをメールに再送信する", :class => "btn btn-primary" %>
          </div>
        <% end %>
        <hr class="log-hr">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</header>
